<div class="row" id="costs-chart-form">
  <div class="mt-4 col-12">
    <form class="form" action="/costs_breakdown" method="get" id="cost-chart-filter">
      <div class="form-row">
        <div class="col-md-3"></div>
        <div class="form-group col-md-2">
          <label for="dataset-list" class="charts-form-label">Groups:</label>
          <select multiple class="form-control cost-datasets-select" name="datasets[]" id="dataset-list">
            <% @possible_datasets.each do |dataset| %>
              <option value='<%=dataset%>' <%= @datasets&.include?(dataset) ? 'selected' : '' if @datasets %>>
              <%= dataset %>
              </option>
            <% end %>
          </select>  
        </div>
        <div class="form-group col-md-2">
          <label for="from-date" class="charts-form-label">From:</label>
          <input class="form-control" type="date" id='from-date'
                 name='start_date'
                 <%= "value=#{@start_date}" %>>
        </div>
        <div class="form-group col-md-2">
          <label for="to-date" class="charts-form-label">To:</label>
          <input class="form-control" type="date" id='to-date'
                 name="end_date"
                 <%= "value=#{@end_date}" %>>
        </div>
      </div>
      <input type="hidden" name="project" value=<%= @project.name %>>
      <div class="form-row">
        <div class="col-md-3"></div>
        <div class="form-group col-md-4">
          <input type="submit" value="Filter" class="btn btn-primary">
          <%= link_to "Clear all", costs_breakdown_path(project: @project.name), class: "btn btn-danger", data: {turbolinks: "false"} %>
        </div>
      </div>
    </form>
  </div>
</div>
