<% content_for :page_specific_js do %>
  <%= javascript_pack_tag 'chart' %>
  <%= javascript_pack_tag 'new_data_check' %>
  <%= javascript_pack_tag 'toggle_select' %>
<% end %>
<div class="costs-breakdown-container">
  <%= render 'partials/title', locals: { title_text: 'costs breakdown', project_name: @project.name } %>
  <%= render '/projects/chart_filter_form' %>
  <div class="card big-padding">
    <h4 class="text-center">Daily spending breakdown</h4>
    <ul class="nav" id="cost-chart-nav">
      <li class="nav-item">
        <a class="active nav-link"
           href="#daily-costs"
           role="tab"
           aria-selected="true"
           data-toggle="tab"
        >
          Daily costs
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link"
           href="#cumulative-costs"
           role="tab"
           aria-selected="false"
           data-toggle="tab"
        >
          Cumulative costs
        </a>
      </li>
    </ul>
    <div class="tab-content">
      <%= render '/projects/costs_chart' %>
      <%= render '/projects/cumulative_chart' %>
    </div>
  </div>
  <%= render '/projects/latest_change' %>
</div>
