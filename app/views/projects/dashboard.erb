<div class="mt-4 text-center mb-4">
  <h2><%= @project.name %> - Dashboard</h2>
</div>

<br>

<div class="container-fluid">
  <div class="row">

    <!-- Overview -->
    <div class="col d-flex align-items-stretch" style="min-width: 285px; max-width:350px;">
      <div class="card w-100">
        <div class="card-body">
          <h4 class="card-title text-center">Overview</h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Balance:</strong> <%= @latest_cycle_details[:starting_balance] %>c.u.
            </li>
            <li class="list-group-item pb-3">
              <strong>Cost this cycle:</strong> <%= @latest_cycle_details[:costs_so_far] %>c.u.
            </li>
            <li class="list-group-item">
              <strong>Spend profile:</strong> <%= @policy.spend_profile.capitalize %>
            </li>
            <li class="list-group-item">
              <strong>Fixed cycle budget:</strong> <%= @latest_cycle_details[:starting_budget] %>c.u.
            </li>
            <li class="list-group-item pb-3">
              <strong>Billing date:</strong> <%= @billing_date || 'N/A'%>
            </li>
            <li class="list-group-item pb-3">
              <strong>Project end date:</strong> <%= @project.end_date || 'N/A'%>
            </li>
          </ul>

          <!-- Links -->
          <div style="text-align:center">
            <a href="billing-management">View spending breakdown</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming events -->
    <div class="col d-flex align-items-stretch" style="min-width: 500px;">
      <div class="card w-100" >
        <div class="card-body">
          <h4 class="card-title text-center">Upcoming events</h4>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

          <!-- Links -->
          <div class="row justify-content-md-center" style="text-align:center">
            <div class="col col-lg-3">
              <a href="events">Create/Manage events</a>
            </div>
            <div class="col col-lg-3">
              <a href="audit">View audit log</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br><br>

  <div class="text-center">
    <h3>Groups</h3>
    <br>
    <div class="row">
      <div class="col">
        <p> Here we have some text. </p>
      </div>
      <div class="col">
        <p> Here we have some more text. </p>
      </div>
    </div>
  </div>
</div>

