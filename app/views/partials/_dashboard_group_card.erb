<div class="card dashboard-card mb-4 groups <%= "core" if locals[:compute_group] == "core"%>">
  <div class="card-body d-flex flex-column">
    <div class="row justify-content-center">

      <!-- To balance settings button-->
      <% unless locals[:compute_group] == "core" %>
        <div class="col-1"></div>
      <% end %>

      <!-- Card heading-->
      <div class="col-9">
        <h4 class="card-title text-center"><%= locals[:compute_group].capitalize %></h4>
      </div>

      <!-- Settings button-->
      <% unless locals[:compute_group] == "core" %>
        <div class="col-1">
          <a href="policies" aria-label="Settings">
            <i class="fa fa-cog fa-lg"></i>
          </a>
        </div>
      <% end %>
    </div>

      <!-- Group data -->
      <ul class="list-group list-group-flush <%= "core" if locals[:compute_group] == "core" %>">
        <li class="list-group-item dashboard-list-item">
          <strong>Status:</strong> <%= locals[:status] %>
        </li>
        <li class="list-group-item dashboard-list-item pb-3">
          <strong>Cost this cycle:</strong> <%= locals[:cost_this_cycle] %> c.u.
        </li>
      </ul>

      <!-- Buttons -->
      <div class="row justify-content-md-center mt-auto text-center">
        <% unless locals[:compute_group] == "core" %>
          <div class="col">
            <% if locals[:end_date] && locals[:end_date] < Date.today %>
              <% disable = true %>
            <% end %>
            <a class="btn btn-warning dashboard-btn <%= "disabled" if disable %>" href="<%= disable ? "#" : "events?groups[]=#{locals[:compute_group]}" %>" role="button">
              Events
            </a>
          </div>
        <% end %>
        <div class="col">
          <a class="btn btn-info dashboard-btn" href="costs-breakdown?datasets[]=<%= locals[:compute_group] %>" role="button">
              More info
            </a>
        </div>
      </div>
  </div>
</div>