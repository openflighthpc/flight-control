<% content_for :page_specific_js do %>
<%= javascript_pack_tag 'create_event'%>
<% end %>

<main class="col-md-12 ml-sm-auto col-lg-12 px-4" role="main">
  <%= render '/partials/nav.erb' %>
  <div class="mt-4 text-center mb-4">
    <h2><%= @project.name %> - Create Event</h2>
  </div>
  <div class="wizard">
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8 wizard-body">
        <% render '/events/choose_counts' %>
        <%= render '/events/choose_when' %>
        <div class="wizard-footer text-right float-right">
          <a class="btn btn-warning" id="wizard-next-button">Next</a>
        </div>
      </div>
    </div>
  </div>
</main>

